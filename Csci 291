#include <stdio.h>

int main() {
    int balance = 1000;

    int transactions[] = {200, -300, 400, -1000, 500, -1200, 600, -50};
    int n_transactions = sizeof(transactions) / sizeof(transactions[0]);

    int tobeprocessed[n_transactions];
    int unprocessed_count = 0;

    for (int i = 0; i < n_transactions; i++) {
        int transaction = transactions[i];

        if (transaction < 0 && balance + transaction < 0) {
            tobeprocessed[unprocessed_count++] = transaction;
            printf("Skipping invalid withdrawal of %d due to insufficient balance.\n", -transaction);
            continue;
        }

        balance += transaction;

        if (balance == 0) {
            printf("Balance reached zero. No further transactions will be processed.\n");
            tobeprocessed[unprocessed_count++] = transaction;
            
            for (int j = i + 1; j < n_transactions; j++) {
                tobeprocessed[unprocessed_count++] = transactions[j];
            }
            break; 
        }
    }

    printf("Final balance: %d AED\n", balance);

    printf("Unprocessed transactions:\n");
    for (int i = 0; i < unprocessed_count; i++) {
        printf("%d ", tobeprocessed[i]);
    }
    printf("\n");

    return 0;
}
